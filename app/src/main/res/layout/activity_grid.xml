<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GridActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="-50dp">

    <TextView
        android:id="@+id/textViewXplain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="421dp"
        android:text="Per aggiungere un vaso all'orto, trascina l'icona del vaso nella posizione che preferisci.\nPer eliminare un vaso, trascinalo nel cestino.\nPer scambiare due vasi, trascinali uno sull'altro."
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <GridLayout
        android:id="@+id/grid_layout"
        android:background="@drawable/border"
        android:layout_width="175dp"
        android:layout_height="350dp"
        android:layout_marginTop="50dp"
        android:columnCount="2"
        android:foregroundGravity="center"
        android:rowCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <FrameLayout
            android:id="@+id/cell1"
            android:background="@drawable/border"
            android:layout_margin="2dp"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:foregroundGravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="1"
                android:textSize="20sp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/cell8"
            android:background="@drawable/border"
            android:layout_margin="2dp"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:foregroundGravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="8"
                android:textSize="20sp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/cell2"
            android:background="@drawable/border"
            android:layout_margin="2dp"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:foregroundGravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="2"
                android:textSize="20sp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/cell7"
            android:background="@drawable/border"
            android:layout_margin="2dp"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:foregroundGravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="7"
                android:textSize="20sp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/cell3"
            android:background="@drawable/border"
            android:layout_margin="2dp"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:foregroundGravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="3"
                android:textSize="20sp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/cell6"
            android:background="@drawable/border"
            android:layout_margin="2dp"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:foregroundGravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="6"
                android:textSize="20sp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/cell4"
            android:background="@drawable/border"
            android:layout_margin="2dp"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:foregroundGravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="4"
                android:textSize="20sp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/cell5"
            android:background="@drawable/border"
            android:layout_margin="2dp"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:foregroundGravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="5"
                android:textSize="20sp"
                android:textStyle="bold" />
        </FrameLayout>
    </GridLayout>

    <ImageView
        android:id="@+id/plant_pot_icon"
        android:background="@drawable/filled"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_pot"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/trash_icon"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="16dp"
        android:background="@drawable/filled"
        android:src="@drawable/ic_trash"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.411"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_set"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/filled"
        android:text="configurazione completata!"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.938"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_conversion_absoluteHeight="48dp"
        tools:layout_conversion_absoluteWidth="88dp" />

</androidx.constraintlayout.widget.ConstraintLayout>