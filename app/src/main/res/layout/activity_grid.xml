<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sfondo"
    tools:context=".GridActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="-50dp">

    <TextView
        android:id="@+id/textViewXplain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Il tuo orto\n"
        android:textAlignment="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textSize="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <GridLayout
        android:id="@+id/grid_layout"
        android:layout_width="180dp"
        android:layout_height="360dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/border"
        android:columnCount="2"
        android:rowCount="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewXplain">

        <FrameLayout
            android:id="@+id/cell1"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:background="@drawable/border"
            android:foregroundGravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#888888"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/cell8"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:background="@drawable/border"
            android:foregroundGravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="8"
                android:textSize="20sp"
                android:textColor="#888888"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/cell2"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:background="@drawable/border"
            android:textColor="#888888"
            android:foregroundGravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="2"
                android:textSize="20sp"
                android:textColor="#888888"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/cell7"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:background="@drawable/border"
            android:foregroundGravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="7"
                android:textSize="20sp"
                android:textColor="#888888"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/cell3"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:background="@drawable/border"
            android:foregroundGravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="3"
                android:textSize="20sp"
                android:textColor="#888888"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/cell6"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:background="@drawable/border"
            android:foregroundGravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="6"
                android:textSize="20sp"
                android:textColor="#888888"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/cell4"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:background="@drawable/border"
            android:foregroundGravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="4"
                android:textSize="20sp"
                android:textColor="#888888"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/cell5"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:background="@drawable/border"
            android:foregroundGravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="5"
                android:textSize="20sp"
                android:textColor="#888888"
                android:textStyle="bold" />
        </FrameLayout>
    </GridLayout>

    <ImageView
        android:id="@+id/plant_pot_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border"
        android:src="@drawable/plant"
        app:layout_constraintEnd_toStartOf="@+id/trash_icon"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/grid_layout" />

    <ImageView
        android:id="@+id/trash_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border"
        android:src="@drawable/trash"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/plant_pot_icon"
        app:layout_constraintTop_toBottomOf="@+id/grid_layout" />

    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@android:drawable/bottom_bar"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ToggleButton
            android:id="@+id/configToggle"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/config_toggle"
            android:button="@null"
            android:textOff=""
            android:textOn="" />

        <ToggleButton
            android:id="@+id/cloudToggle"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginHorizontal="70dp"
            android:background="@drawable/cloud_toggle"
            android:button="@null"
            android:textOff=""
            android:textOn="" />

        <ToggleButton
            android:id="@+id/waterToggle"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/valve_toggle"
            android:button="@null"
            android:textOff=""
            android:textOn="" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>